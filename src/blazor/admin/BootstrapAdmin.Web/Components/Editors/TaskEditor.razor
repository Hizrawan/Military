@namespace BootstrapAdmin.Web.Components

<div class="row g-3 form-inline">
    <div class="col-12">
        <BootstrapInput @bind-Value="@Value.Name" placeholder="@Localizer["TaskPlaceholder", 50]" maxlength="50" />
    </div>
    <div class="col-12">
        <Select @bind-Value="@Value.Trigger" Items="Items" />
    </div>
    <div class="col-12">
        <Display TValue="string" Value="@TaskName" ShowLabel="true" DisplayText="@Localizer["TaskNameText"]" />
    </div>
</div>
