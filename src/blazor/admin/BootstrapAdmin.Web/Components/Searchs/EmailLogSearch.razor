@namespace BootstrapAdmin.Web.Components

<div class="row g-3 form-inline">
    <div class="col-sm-6 col-md-6">
        <Select Items="@EmailTypeSelect" @bind-Value="Value.EmailType" ShowLabel="true"></Select>
    </div>
    <div class="col-sm-6 col-md-6">
        <Select Items="@EmailStatusSelect" @bind-Value="Value.EmailStatus" ShowLabel="true"></Select>
    </div>
    <div class="col-sm-6 col-md-6">
        <DateTimeRange @bind-Value="Value.SendDates" ShowLabel="true" AllowNull="true" />
    </div>
</div>
